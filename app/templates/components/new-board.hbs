{{#if addNewBoard}}
  <h1>New question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="note">notes</label>
        {{input value=note id="note"}}
      </div>
      <button {{action 'saveBoard'}}>Save</button>
    </form>
  </div>
{{else}}
  <button  {{action 'boardFormShow'}}>New question</button>
{{/if}}
